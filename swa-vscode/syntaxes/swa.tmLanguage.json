{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlLanguage.json",
    "name": "Swa",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#types"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.swa",
                    "match": "//.*"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.swa",
                    "match": "\\b(if|else|while|return|start)\\b"
                },
                {
                    "name": "keyword.other.swa",
                    "match": "\\b(let|const|struct|func|dialect|variadic)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.swa",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.swa",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.swa",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "entity.name.type.swa",
                    "match": "\\b(int|int64|float|string)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.swa",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        }
    ],
    "scopeName": "source.swa"
}