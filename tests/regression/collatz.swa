dialect:english;

// Collatz Conjecture: test loops and modulo-like logic
// Since Swa might not have % operator (need to check), we implement it or use subtraction loop.
func collatz(n: int) int {
    let steps: int = 0;
    while (n > 1) {
        // Simple parity check if % is not supported: 
        // (n/2)*2 == n -> even
        let half: int = n / 2;
        if (half * 2 == n) {
            n = half;
        } else {
            n = 3 * n + 1;
        }
        steps = steps + 1;
    }
    return steps;
}

start() int {
    print("Testing Collatz Conjecture...\n");
    
    let n: int = 27; // Takes 111 steps
    let res: int = collatz(n);
    
    print("Collatz(%d) took %d steps.\n", n, res);
    
    if (res == 111) {
        print("Success: Collatz(27) is correct.\n");
    } else {
        print("Error: Expected 111, got %d\n", res);
        return 1;
    }
    
    return 0;
}
