sodé() konti {
    kouicé arr: [5]konti = [5]konti{1, 2, 3, 4, 5};
    kouicé p: *konti = &arr[0];
    
    masen("p[0] = %d\n", *p);
    
    // Testing pointer arithmetic if supported
    // let next_p: *int = p + 1; 
    
    // Alternative: offset access
    kouicé third_p: *konti = &arr[2];
    masen("p[2] = %d\n", *third_p);
    
    xa (*third_p == 3) {
        masen("Success: Address-of array element works.\n");
