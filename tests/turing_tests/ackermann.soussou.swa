khuien:soussou;

// Ackermann function: classic recursion benchmark
wali ackermann(m: konti, n: konti) konti {
    xa (m == 0) {
        gbilen n + 1;
    }
    xa (m > 0) {
        xa (n == 0) {
            gbilen ackermann(m - 1, 1);
        }
    }
    gbilen ackermann(m - 1, ackermann(m, n - 1));
}

sodé() konti {
    masen("Testing Ackermann function...\n");
    
    // A(3, 2) = 29
    kouicé m: konti = 3;
    kouicé n: konti = 2;
    kouicé res: konti = ackermann(m, n);
    
    masen("ackermann(%d, %d) = %d\n", m, n, res);
    
    xa (res == 29) {
        masen("Success: Ackermann A(3, 2) is correct.\n");
    } xamuara {
        masen("Error: Expected 29, got %d\n", res);
        gbilen 1;
    }
    
    gbilen 0;
}
