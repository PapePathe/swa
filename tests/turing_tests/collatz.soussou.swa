khuien:soussou;

// Collatz Conjecture: test loops and modulo-like logic
// Since Swa might not have % operator (need to check), we implement it or use subtraction loop.
wali collatz(n: konti) konti {
    kouicé steps: konti = 0;
    be (n > 1) {
        // Simple parity check if % is not supported: 
        // (n/2)*2 == n -> even
        kouicé half: konti = n / 2;
        xa (half * 2 == n) {
            n = half;
        } xamuara {
            n = 3 * n + 1;
        }
        steps = steps + 1;
    }
    gbilen steps;
}

sodé() konti {
    masen("Testing Collatz Conjecture...\n");
    
    kouicé n: konti = 27; // Takes 111 steps
    kouicé res: konti = collatz(n);
    
    masen("Collatz(%d) took %d steps.\n", n, res);
    
    xa (res == 111) {
        masen("Success: Collatz(27) is correct.\n");
    } xamuara {
        masen("Error: Expected 111, got %d\n", res);
        gbilen 1;
    }
    
    gbilen 0;
}
