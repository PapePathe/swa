dialect:english;

struct Person {
    age: int,
}

func safeadd(a: int, b: int) (int, error) {
    return a + b, zero(error);
}

func add(a: int, b: int) int {
    return a + b;
}

start() int {
    // Variable declarations: let, const
    let x: int = 10;
    let y: int = 20;

    // Function call
    let sum: int = add(x, y);

    // Conditional: if, else, true, false
    let flag: bool = true;
    if (flag) {
        print("Flag is true\n");
    } else {
        print("Flag is false");
    }

    if (sum > 25) {
        print("Sum is greater than 25\n");
    }

    // Loop: while
    let i: int = 0;
    while (i < 3) {
        print(i);
        i = i + 1;
    }

    // Struct usage: struct, zero
    let p: Person = zero(Person);
