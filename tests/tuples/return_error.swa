dialect:english;

func check_value(v: int) (int, error) {
    if (v < 0) {
        return 0, error("value is negative");
    }
    return v, zero(error);
}

start() int {
    let val: int = 0;
    let err: error;
    
    (val, err) = check_value(10);
    print("val: %d, err: %s\n", val, err);
    
    (val, err) = check_value(-1);
    print("val: %d, err: %s\n", val, err);
    
    return 0;
}
